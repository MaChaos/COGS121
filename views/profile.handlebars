<!-- profile -->
<!DOCTYPE html>
<html>
<head>
  <title>Travel Diary</title>
  <meta charset="utf-8" />
  <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="./css/bootstrap/bootstrap.css" rel="stylesheet"/>
    <link href="./css/bootstrap/carousel.css" rel="stylesheet"/>
    <link href="./css/bootstrap/login.css" rel="stylesheet"/>
    <link href="./css/index.css" rel="stylesheet"/>
    <link href="./css/profile.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Aclonica|Contrail+One|Fredericka+the+Great|Ruslan+Display" rel="stylesheet">
    <script src="js/medium-editor.js"></script>
    <script src="./js/jquery-3.2.1.js"></script>
    <!-- <script src="js/profile.js"></script> -->

    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCVX-hvAGl21JA0nBii3fNYTyec2SOKLqw&libraries=places&callback=initMap">
    </script>
    <script src="js/profile.js"></script>
</head>
<body>
  <nav class="navbar navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand font-ftg" href="/">Travel U&Me</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav float-right">
            <li>
              <a class="navbar-btn" href="/explore">Explore</a>
            </li>
            {{#if loggedIn}}
            <li>
              <form action="/newblog" method="GET">
                {{#if isOwner}}
                <button class="addBtn navbar-btn" type="submit">New Diary</button>
                {{/if}}
              </form>
            </li>
            <li><a class="navbar-btn" href="/{{currentUser}}">{{currentUser}}</a></li>
            <li>
              <a class="navbar-btn" href="/logout">Logout</a>
            </li>
            {{else}}
            <li><a class="navbar-btn" href="/login">Login</a></li>
            {{/if}}
          </ul>
        </div><!-- /.nav-collapse -->
      </div><!-- /.container -->
    </nav><!-- /.navbar -->
  <div style="
    text-align: -webkit-center;
">

    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active" ></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img class="first-slide" src="/img/max-mao-259527.jpg" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Welcome to {{username}}'s Travel Diary'</h1>
              <p>I travel to learn the truth of life.</p>

            </div>
          </div>
        </div>
        <div class="item">
          <img class="second-slide" src="/img/zach-rowlandson-272001.jpg" alt="Second slide">
          <div class="container">
            <div class="carousel-caption">
            </div>
          </div>
        </div>
        <div class="item">
          <img class="third-slide" src="/img/copenhagen/johan-mouchet-97136.jpg" alt="Third slide">
          <div class="container">
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div><!-- /.carousel -->
    <div>
      <p class="intro font-ftg">
        Journey Starts Here
      </p>
      <!-- <label id="switch" class="switch">
        <input type="checkbox">
        <div class="slider round"></div>
      </label> -->
    </div>
    <div>
      <div class="content-blog">


        {{#each blogs}}
        <div class="card">
          <a href="/{{owner.username}}/{{title}}">
            <div class="blog-card">
              <div class="card-image">
                <img class="coverImg" src="{{coverURL}}"/>
              </div>
              <div class="card-title">
                {{title}}
              </div>
              <div class="card-content">
                {{content}}

              </div>

            </div>
          </a>
        </div>
        {{/each}}
      </div>
      <div class="" id="map" style="height: 500px; width:80%">

      </div>
    </div>
  </div>


  {{> facebook}}
  <script src="./js/login.js"></script>
  <script src="./js/bootstrap.js"></script>
  <script src="./js/Sortable.js"></script>
  <script src="./js/turf.min.js"></script>
  <!-- <script src="js/medium-editor.js"></script> -->
  <link rel="stylesheet" href="css/medium-editor.css">
  <link rel="stylesheet" href="css/themes/default.css">
  {{#each blogs}}
    {{#each places}}
  <script>
  var place = new google.maps.LatLng('{{geo.lat}}', '{{geo.lng}}');

  addMarker(place, '{{name}}', '{{addr}}');
  </script>
    {{/each}}
  {{/each}}

</body>
</html>
